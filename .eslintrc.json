{
    "env": {
        "node": true,
        "es2022": true,
        "jest": true,
        "browser": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "prefer-const": "error",
        "no-var": "error",
        "no-console": "off",
        "eqeqeq": [
            "error",
            "always"
        ],
        "curly": [
            "error",
            "all"
        ],
        "no-throw-literal": "error",
        "no-return-await": "error",
        "require-await": "off",
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_"
            }
        ]
    },
    "ignorePatterns": [
        "dist/",
        "node_modules/",
        "coverage/",
        "tests/"
    ]
}