{
    "name": "sisense-local-mcp-server",
    "version": "1.0.0",
    "description": "Local (STD) Sisense MCP server",
    "main": "dist/index.js",
    "type": "module",
    "engines": {
        "node": ">=20.0.0",
        "npm": ">=10.0.0"
    },
    "scripts": {
        "build": "tsc",
        "dev": "tsx watch src/index.ts",
        "start": "node dist/index.js",
        "start:mcp": "npx @modelcontextprotocol/inspector node dist/index.js",
        "debug": "node --inspect dist/index.js",
        "debug:brk": "node --inspect-brk dist/index.js",
        "debug:dev": "tsx --inspect src/index.ts",
        "debug:dev:brk": "tsx --inspect-brk src/index.ts",
        "debug:mcp": "npx @modelcontextprotocol/inspector tsx --inspect src/index.ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "format": "prettier --write src/**/*.ts",
        "format:check": "prettier --check src/**/*.ts",
        "type-check": "tsc --noEmit",
        "clean": "rm -rf dist",
        "prebuild": "npm run clean",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "mcp",
        "model-context-protocol",
        "sisense",
        "server",
        "typescript"
    ],
    "author": "Sisense",
    "license": "MIT",
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.20.0",
        "dotenv": "^16.4.5",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.24",
        "@typescript-eslint/eslint-plugin": "^8.46.2",
        "@typescript-eslint/parser": "^8.46.2",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "jest": "^29.7.0",
        "prettier": "^3.2.5",
        "ts-jest": "^29.1.2",
        "tsx": "^4.7.1",
        "typescript": "^5.3.3"
    }
}